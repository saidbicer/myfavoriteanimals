<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="animal"
            type="com.said.myfavoriteanimals.data.db.entity.Animal" />

        <variable
            name="listener"
            type="com.said.myfavoriteanimals.ui.adapter.AnimalClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/llRow"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="@{listener::onAnimalClicked}"
        android:tag="@{animal}"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAnimal"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:downloadImage="@{animal.imgUrl}"
            android:scaleType="centerCrop" />

    </LinearLayout>

</layout>